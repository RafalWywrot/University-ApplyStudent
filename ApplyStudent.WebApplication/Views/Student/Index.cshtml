@model IEnumerable<ApplyStudent.Service.ModelsDTO.StudentDTO>

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="btn-group" role="group">
        <button type="button" onclick="location.href='@Url.Action("New","Student")'" class="btn btn-success" aria-haspopup="true" aria-expanded="false">
            @Html.Name("Create new Student")
            <span class="glyphicon glyphicon-plus"></span>
        </button>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Email</th>
                    <th>Password</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td>@student.Name</td>
                        <td>@student.Surname</td>
                        <td>@student.Email</td>
                        <td>@student.Password</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
